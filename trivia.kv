#: set default_font_size app.default_font_size

<Widget>
    font_name: app.default_font_name
    font_size: app.default_font_size
    halign: 'right'

<Button>
    on_press: app.btn_pressed()

<MainWindow>:
    GridLayout:
        cols: 1
        rows: 6

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: 'Background_texture.png'

        Label:
            text: ""

        Label:
            id: welcome_label
            text: root.WELCOME_TXT

        Button:
            text: root.PLAY_TXT
            on_release:
                root.pass_screen('game_mode_selection')

        Button:
            text: root.SCORE_TXT
            on_release:
                root.pass_screen('score')

        Button:
            text: root.SETTINGS_TXT
            on_release:
                root.pass_screen('settings')

        Button:
            text: root.EXIT_TXT
            on_release:
                root.quit()

<GameModeSelectionWindow>:
    GridLayout:
        cols: 1
        rows: 7

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: 'Background_texture.png'

        Label:
            text: ""

        Label:
            text: root.GAME_MODE_WELCOME_TXT

        Button:
            text: root.PRACTICE_TXT
            on_release:
                root.start_game(0)

        Button:
            text: root.EASY_TXT
            on_release:
                root.start_game(1)

        Button:
            text: root.MEDIUM_TXT
            on_release:
                root.start_game(2)

        Button:
            text: root.TIME_MODE_TXT
            on_release:
                root.start_game(3)

        Button:
            text: root.BACK_TXT
            on_release:
                root.pass_screen_main()

<GameWindow>:
    GridLayout:
        cols: 1
        rows: 7

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: 'Background_texture.png'

        GridLayout:
            cols: 2
            rows: 2

            Label:
                text: root.SUCCESS_TXT

            Label:
                text: root.TIME_TXT

            Label:
                id: score
                text: root.SUCCESS_VALUE_TXT

            Label:
                id: timer
                text: root.TIME_VALUE_TXT

        Label:
            id: question
            text: "QUESTION"
            text_size: self.width, None
            valign: 'middle'
            padding_x: 20

        Label:
            text: ""

        Button:
            id: ans0
            text: ""
            text_size: self.width, None
            valign: 'middle'
            padding_x: 20
            on_release:
                root.select_answer(0)

        Button:
            id: ans1
            text: ""
            text_size: self.width, None
            valign: 'middle'
            padding_x: 20
            on_release:
                root.select_answer(1)

        Button:
            id: ans2
            text: ""
            text_size: self.width, None
            valign: 'middle'
            padding_x: 20
            on_release:
                root.select_answer(2)

        Button:
            id: ans3
            text: ""
            text_size: self.width, None
            valign: 'middle'
            padding_x: 20
            on_release:
                root.select_answer(3)

<GameScoreWindow>:
    GridLayout:
        cols: 1
        rows: 4

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: 'Background_texture.png'

        Label:
            text: ""

        Label:
            text: root.FINAL_SCORE_TXT

        Label:
            id: score
            text: ""

        Label:
            text: ""

<LoadingWindow>
    GridLayout:
        cols: 1
        rows:3

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: 'Background_texture.png'

        Label:
            text: ""

        Label:
            text: "Loading"

        Label:
            text: ""

<ScoreWindow>:
    GridLayout:
        cols: 1
        rows: 7

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: 'Background_texture.png'


        Label:
            text: "Score"

<SettingsWindow> :
    GridLayout:
        cols: 1
        rows: 7

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: 'Background_texture.png'


        Label:
            text: root.SETTINGS_HEADER_TXT

        Label:
            text: ""

        GridLayout:
            cols: 1
            rows: 2

            Label:
                text_size: self.width, None
                max_lines: 1
                padding_x: 20

                text: root.FONT_TXT

            Slider:
                id: font_size_slider
                min: 10
                max: 30
                on_value: root.set_font_size(self.value)

        GridLayout:
            cols: 1
            rows: 2

            Label:
                text_size: self.width, None
                max_lines: 1
                padding_x: 20
                text: root.VOLUME_TXT

            Slider:
                id: volume_slider
                min: 0
                max: 1
                on_value: root.set_master_volume(self.value)

        Label:
            text: ""

        Button:
            text: root.BACK_TXT
            on_release:
                root.pass_screen_main()

        Label:
            text: ""
