<Widget>
    font_name: app.default_font_name
    font_size: app.default_font_size
    color: app.font_color

    halign: 'right'

<Button>
    on_press: app.btn_pressed()

<WelcomeWindow>
    GridLayout:
        cols: 1
        rows: 6

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: app.background_src

        Label:
            text: ""

        Label:
            text: root.WELCOME_NEW_PLAYER_TXT


        TextInput:
            id: name_txt_input
            multiline: False
            use_bubble: False
            on_focus:
                root.redirect_focus()

        TextInput:
            id: name_input_hidden
            use_bubble: False
            on_text:
                root.fix_string(self.text)
            multiline: False

        Button:
            text: root.CONTINUE_TXT
            on_release:
                root.continue_to_game()

        Label:
            text: ""





<MainWindow>:
    GridLayout:
        cols: 1
        rows: 5

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: app.background_src

        Label:
            text: ""

        Label:
            id: welcome_label

        Button:
            text: root.PLAY_TXT
            on_release:
                root.pass_screen('game_mode_selection')

        Button:
            text: root.SCORE_TXT
            on_release:
                root.pass_screen('score')

        Button:
            text: root.SETTINGS_TXT
            on_release:
                root.pass_screen('settings')


<GameModeSelectionWindow>:
    GridLayout:
        cols: 1
        rows: 7

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: app.background_src

        Label:
            text: ""

        Label:
            text: root.GAME_MODE_WELCOME_TXT

        Button:
            text: root.PRACTICE_TXT
            on_release:
                root.start_game(0)

        Button:
            text: root.EASY_TXT
            on_release:
                root.start_game(1)

        Button:
            text: root.MEDIUM_TXT
            on_release:
                root.start_game(2)

        Button:
            text: root.TIME_MODE_TXT
            on_release:
                root.start_game(3)


<GameWindow>:
    GridLayout:
        cols: 1
        rows: 7

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: app.background_src

        GridLayout:
            cols: 2
            rows: 2
            height: root.ids.score.texture_size[1] * 2
            size_hint_y: None

            Label:
                text: root.SCORE_TXT
                height: self.texture_size[1]
                size_hint_y: None

            Label:
                text: root.TIME_TXT
                height: self.texture_size[1]
                size_hint_y: None

            Label:
                id: score
                text: root.SCORE_VALUE_TXT
                height: self.texture_size[1]
                size_hint_y: None

            Label:
                id: timer
                text: root.TIME_VALUE_TXT
                height: self.texture_size[1]
                size_hint_y: None

        ScrollView:
            do_scroll_x: False
            height: root.ids.score.texture_size[1] * 8
            size_hint_y: None

            Label:
                text: "QUESTION"
                id: question
                size_hint_y: None
                size: self.texture_size
                text_size: self.width, None
                valign: 'middle'
                padding_x: 20
                #background_color: 0.5,0,0,0.5
                #background_normal: ""
                #color: 0.5, 0.5, 0.5, 0.5

                #canvas.before:
                #    Rectangle:
                #        pos: self.pos
                #        size: self.size

                #    Color:
                #        rgba: 0, 1, 0, 0.5


        Button:
            id: ans0
            text: ""
            text_size: self.width, None
            valign: 'middle'
            padding_x: 20
            on_release:
                root.select_answer(0)

        Button:
            id: ans1
            text: ""
            text_size: self.width, None
            valign: 'middle'
            padding_x: 20
            on_release:
                root.select_answer(1)

        Button:
            id: ans2
            text: ""
            text_size: self.width, None
            valign: 'middle'
            padding_x: 20
            on_release:
                root.select_answer(2)

        Button:
            id: ans3
            text: ""
            text_size: self.width, None
            valign: 'middle'
            padding_x: 20
            on_release:
                root.select_answer(3)

<GameScoreWindow>:
    GridLayout:
        cols: 1
        rows: 3

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: app.background_src

        Label:
            text: ""

        GridLayout:
            cols: 2
            rows: 2

            Label:
                id: success
                text: ""

            Label:
                text: root.FINAL_SUCCESS_TXT

            Label:
                id: score
                text: ""

            Label:
                text: root.FINAL_SCORE_TXT

        Label:
            text: ""

<LoadingWindow>
    GridLayout:
        cols: 1
        rows:3

        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: app.background_src

        Label:
            text: ""

        Label:
            text: "Loading"

        Label:
            text: ""

<ScoreWindow>:
    GridLayout:
        cols: 1
        rows: 3


        canvas.before:
            Rectangle:
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: app.background_src



        Label:
            id: score_title
            text: root.TITLE_TXT
            height: self.texture_size[1] * 2
            size_hint_y: None

        ScrollView:
            id: master_scroll_view
            size_hint_y: None
            do_scroll_x: False

            GridLayout:
                id: master_grid
                size_hint_y: None
                cols: 1


<SettingsWindow> :
    GridLayout:
        id: grid
        cols: 1
        rows: 7
        image: app.background_src

        canvas.before:
            Rectangle:
                id: rect
                pos: self.pos
                size: [max(self.size[0],self.size[1]), max(self.size[0],self.size[1])]
                source: self.image

        Label:
            id: settings_title
            text: root.SETTINGS_HEADER_TXT
            height: self.texture_size[1] * 2
            size_hint_y: None

        ScrollView:
            id: master_scroll_view
            size_hint_y: None
            do_scroll_x: False

            GridLayout:
                id: master_grid
                size_hint_y: None
                cols: 1
                rows: 3


                GridLayout:
                    cols: 1
                    rows: 3
                    size_hint_y: None


                    Label:
                        text: root.FONT_TXT
                        text_size: self.width, None
                        height: self.texture_size[1] * 2
                        size_hint_y: None
                        max_lines: 1
                        padding_x: 20

                    Slider:
                        id: font_size_slider
                        min: 10
                        max: 30
                        on_value: root.set_font_size(self.value)
                        height: '10sp'
                        size_hint_y: None


                    Label:
                        text: ""

                GridLayout:
                    cols: 1
                    rows: 3
                    size_hint_y: None

                    Label:
                        text: root.VOLUME_TXT
                        text_size: self.width, None
                        height: self.texture_size[1] * 2
                        size_hint_y: None
                        padding_x: 20
                        max_lines: 1

                    Slider:
                        id: volume_slider
                        min: 0
                        max: 1
                        on_value: root.set_master_volume(self.value)
                        height: '10sp'
                        size_hint_y: None

                    Label:
                        text: ""

                    Label:
                        text: ""


                GridLayout:
                    cols: 2
                    rows: 2
                    size_hint_y: None

                    Switch:
                        active: False
                        on_active: root.toggle_dark_mode(self.active)


                    Label:
                        text: root.DARK_MODE_TXT
                        text_size: self.width, None
                        max_lines: 1
                        padding_x: 20
                        valign: 'middle'
                    Label:
                        text: ""
